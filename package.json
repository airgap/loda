{
	"name": "loda",
	"version": "1.0.0",
	"devDependencies": {
		"parcel": "^2.5.0",
		"prettier": "2.6.2",
		"vite": "^2.9.6",
		"vite-plugin-markdown": "^2.0.2",
		"xo": "^0.48.0"
	},
	"main": "dist/index.js",
	"scripts": {
		"lint": "xo --fix \"{src/**/*,*}.{js,ts,jsx,tsx,json}\"",
		"test": "xo \"{src/**/*,*}.{js,ts,jsx,tsx,json}\"",
		"dev": "vite --config demo/vite.config.ts",
		"build": "npm run lint && parcel build src/index.ts",
		"preview": "vite preview --config demo/vite.config.ts",
		"clean": "rm -rf dist node_modules package-lock.json .parcel-cache"
	},
	"xo": {
		"prettier": "true",
		"rules": {
			"unicorn/filename-case": [
				"error",
				{
					"cases": {
						"camelCase": true,
						"pascalCase": true,
						"kebabCase": false,
						"snakeCase": false
					}
				}
			],
			"unicorn/prefer-query-selector": 0,
			"import/extensions": 0,
			"@typescript-eslint/naming-convention": 0
		},
		"no-semicolon": true
	},
	"eslintConfig": {
		"extends": [
			"xo",
			"xo-typescript"
		]
	}
}

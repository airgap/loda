{
	"name": "loda",
	"version": "1.0.0",
	"devDependencies": {
		"clean-webpack-plugin": "^4.0.0",
		"prettier": "2.6.2",
		"terser-webpack-plugin": "^5.3.1",
		"ts-loader": "^9.3.0",
		"typescript": "^4.6.4",
		"vite": "^2.9.6",
		"vite-plugin-markdown": "^2.0.2",
		"webpack": "^5.72.0",
		"webpack-cli": "^4.9.2",
		"xo": "^0.48.0"
	},
	"main": "dist/main.js",
	"scripts": {
		"lint": "xo --fix \"{src/**/*,*}.{js,ts,jsx,tsx,json}\"",
		"test": "xo \"{src/**/*,src/*}.{js,ts,jsx,tsx,json}\"",
		"dev": "vite --config demo/vite.config.ts",
		"build": "npm run test && webpack",
		"preview": "vite preview --config demo/vite.config.ts",
		"clean": "rm -rf dist node_modules package-lock.json .parcel-cache"
	},
	"xo": {
		"prettier": "true",
		"rules": {
			"unicorn/filename-case": [
				"error",
				{
					"cases": {
						"camelCase": true,
						"pascalCase": true,
						"kebabCase": false,
						"snakeCase": false
					}
				}
			],
			"unicorn/prefer-query-selector": 0,
			"unicorn/prefer-node-protocol": 0,
			"import/extensions": 0,
			"@typescript-eslint/naming-convention": 0
		},
		"no-semicolon": true
	},
	"eslintConfig": {
		"extends": [
			"xo",
			"xo-typescript"
		]
	}
}
